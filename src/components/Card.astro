---
interface Props {
	title: string;
	img: string;
	alt: string;
	href?: string;
}

const { href, img, title } = Astro.props;
---

<li class="link-card">
	<div>
		<a href={href}>
			<img src={img} />
			<h2>
				{title}
			</h2>
		</a>
		<slot />
	</div>
</li>
<style>
	.link-card {
		cursor: default;
		list-style: none;
		display: fle;
		margin-bottom: 10px;
		background-color: #23262d;
		border: 2px solid rgb(var(--accent-dark));
		border-radius: 7px;
		background-position: 100%;
		/* box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1); */
	}
	.link-card div {
		width: 100%;
		text-decoration: none;
		color: rgb(var(--accent-light));
		background-color: #23262d;
		opacity: 0.8;
	}
	.link-card h2 {
		display: inline;
		color: white;
		text-decoration: none;
		margin: 0;
		font-size: 1.25rem;
	}
	.link-card a {
		display: flex;
		text-decoration: none;
		color: rgb(var(--accent-light));
	}
	.link-card img {
		vertical-align: middle;
		width: 30px;
		height: 30px;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
